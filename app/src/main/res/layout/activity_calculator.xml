<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ardalan.myapplication.Calculator">

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button32"
        android:onClick="five"
        android:layout_alignBaseline="@+id/button31"
        android:layout_alignBottom="@+id/button31"
        android:layout_toEndOf="@+id/button31" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button35"
        android:onClick="three"
        android:layout_alignBaseline="@+id/button33"
        android:layout_alignBottom="@+id/button33"
        android:layout_toEndOf="@+id/button33" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button34"
        android:onClick="one"
        android:layout_below="@+id/button32"
        android:layout_alignParentStart="true" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button30"
        android:onClick="six"
        android:layout_alignBaseline="@+id/button32"
        android:layout_alignBottom="@+id/button32"
        android:layout_toEndOf="@+id/button32" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button33"
        android:onClick="two"
        android:layout_alignBaseline="@+id/button34"
        android:layout_alignBottom="@+id/button34"
        android:layout_toEndOf="@+id/button31" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/button31"
        android:onClick="four"
        android:layout_below="@+id/button18"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:onClick="TextView"
        android:layout_above="@+id/editText2"
        android:layout_toEndOf="@+id/editText2"
        android:layout_marginBottom="35dp" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:onClick="add"
        android:layout_above="@+id/button9"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="÷"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:onClick="Division"
        android:layout_above="@+id/button12"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:onClick="Negative"
        android:layout_above="@+id/button10"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:onClick="Mul"
        android:layout_above="@+id/button11"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="√"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:onClick="Squareroot"
        android:layout_above="@+id/button13"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBaseline="@+id/button16"
        android:layout_alignBottom="@+id/button16"
        android:layout_alignStart="@+id/editText" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="zero"
        android:id="@+id/button36"
        android:layout_below="@+id/button35"
        android:layout_toEndOf="@+id/button34" />

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:onClick="Percent"
        android:layout_above="@+id/button15"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Equal"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button19"
        android:onClick="eight"
        android:layout_above="@+id/button31"
        android:layout_toEndOf="@+id/button18" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button18"
        android:onClick="seven"
        android:layout_alignBaseline="@+id/button17"
        android:layout_alignBottom="@+id/button17"
        android:layout_alignParentStart="true" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button17"
        android:onClick="nine"
        android:layout_below="@+id/button15"
        android:layout_toEndOf="@+id/button32"
        android:layout_marginTop="15dp" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="delete"
        android:id="@+id/button14"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button16" />

</RelativeLayout>
